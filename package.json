{
  "name": "vod-downloader",
  "displayName": "Vod downloader",
  "version": "0.0.1",
  "description": "Downloads HLS and DASH video and converts to MP4 format",
  "author": "Joonku Kim",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.1.1",
    "axios": "^1.3.3",
    "plasmo": "0.65.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.210",
    "@types/node": "18.11.18",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "typescript": "4.9.4"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "tabs",
      "webRequest",
      "downloads",
      "declarativeNetRequest",
      "declarativeNetRequestWithHostAccess"
    ]
  }
}
