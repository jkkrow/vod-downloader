{
  "name": "vod-downloader",
  "displayName": "VOD Downloader",
  "version": "0.0.1",
  "description": "Downloads HLS and DASH video and converts to MP4 format",
  "author": "Joonku Kim",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "debug": "plasmo dev --verbose"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.1.1",
    "@plasmohq/storage": "^1.2.0",
    "async-mutex": "^0.4.0",
    "framer-motion": "^10.0.2",
    "m3u8-parser": "^6.0.0",
    "mpd-parser": "^0.22.1",
    "plasmo": "0.65.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@tailwindcss/line-clamp": "^0.4.2",
    "@types/chrome": "0.0.237",
    "@types/node": "18.11.18",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "autoprefixer": "^10.4.13",
    "postcss": "^8.4.21",
    "tailwind-scrollbar": "^3.0.0",
    "tailwindcss": "^3.2.7",
    "typescript": "4.9.4"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "permissions": [
      "declarativeNetRequest",
      "tabs",
      "downloads",
      "webRequest",
      "webNavigation"
    ]
  }
}
